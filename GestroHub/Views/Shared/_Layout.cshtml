<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - GestroHub</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body style="margin: 0; padding: 0;">

    @RenderBody()

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Modal za login/register -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title" id="authModalLabel">Dobrodošli u GestroHub</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zatvori"></button>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs mb-3" id="authTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab">Login</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab">Register</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="authTabsContent">
                        <!-- Login forma -->
                        <div class="tab-pane fade show active" id="login" role="tabpanel">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label>Email</label>
                                    <input type="email" name="email" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label>Lozinka</label>
                                    <input type="password" name="lozinka" class="form-control" required />
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Prijava</button>
                            }
                        </div>

                        <!-- Register forma -->
                        <div class="tab-pane fade" id="register" role="tabpanel">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label>Ime</label>
                                    <input type="text" name="Ime" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label>Email</label>
                                    <input type="email" name="Email" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label>Lozinka</label>
                                    <input type="password" name="Lozinka" class="form-control" required />
                                </div>
                                <button type="submit" class="btn btn-success w-100">Registracija</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


</html>

