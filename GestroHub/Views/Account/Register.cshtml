@model GestroHub.Models.Korisnik
@{
    ViewBag.Title = "Registracija";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Registracija</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Ime)
            @Html.TextBoxFor(m => m.Ime, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ime)
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Lozinka)
            @Html.PasswordFor(m => m.Lozinka, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Lozinka)
        </div>

        <button type="submit" class="btn btn-success w-100">Registriraj se</button>
    }

    <div class="text-center mt-3">
        <a href="/">Natrag na početnu</a>
    </div>
</div>
