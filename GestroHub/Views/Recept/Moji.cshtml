@model List<GestroHub.Models.Recept>
@{
    ViewBag.Title = "Moji recepti";
}

<div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>📋 Moji recepti</h2>
            <a href="@Url.Action("Create", "Recept")" class="btn btn-success">➕ Dodaj recept</a>
        </div>

        @if (Model == null || !Model.GetEnumerator().MoveNext())
        {
            <p class="text-muted">Nema dodanih recepata.</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var r in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="@Url.Content("~/Content/images/" + r.SlikaPutanja)" class="card-img-top" alt="@r.Naziv" style="height: 200px; object-fit: cover;" />
                            <div class="card-body">
                                <h5 class="card-title">@r.Naziv</h5>
                                <p class="card-text">@r.Opis</p>
                                <div class="mt-3 d-flex justify-content-between">
                                    <a href="@Url.Action("Edit", "Recept", new { id = r.Id })" class="btn btn-sm btn-outline-primary">✏️ Uredi</a>
                                    <a href="@Url.Action("Delete", "Recept", new { id = r.Id })" class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Jeste li sigurni da želite obrisati ovaj recept?');">🗑️ Obriši</a>
                                </div>
                                <span class="badge bg-secondary">@r.Kategorija</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }   

            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Natrag</a>
    </div>
